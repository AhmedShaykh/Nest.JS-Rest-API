generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id          Int      @id @default(autoincrement())
  userId      Int
  title       String
  description String
  author      String
  price       String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique()
  password String
  Book     Book[]
}
